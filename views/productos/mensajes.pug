extends ../layout/admin

block  contenido
    h2(class="text-2xl font-extrabold text-center my-10")=pagina

    a(href="/mis-productos" class="rounded py-2 px-10 bg-yellow-500 hover:bg-yellow-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

    div(class="mx-auto max-w-6xl bg-white shadow")

        if mensajes.length  
            ul 
                each mensaje in mensajes 
                    li(class="border-gray-200 border-b p-5")

                        p(class="font-bold text-gray-500") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre
                        
                        p(class="font-bold text-gray-500") Mensaje 
                            span(class="font-normal")= mensaje.mensaje
        else 
            p(class="text-center text-gray-600 p-5") No hay mensajes